<hc:Window x:Class="ProjectAlert.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="项目监控"
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource ContentBackgroundBrush}"
        Icon="{x:Null}">

    <hc:Window.Resources>
        <!-- 导航按钮样式 -->
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="64"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#B0BEC5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0" BorderBrush="Transparent">
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       FontSize="{TemplateBinding FontSize}"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#455A64"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#455A64"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </hc:Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="#37474F">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Logo区域 -->
                <Border Grid.Row="0" Height="64" Background="#263238">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="PA" FontSize="22" FontWeight="Bold"
                                   Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- 导航按钮 -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,8,0,0">
                    <RadioButton x:Name="NavDashboard" Style="{StaticResource NavButtonStyle}"
                                 Content="&#xE80F;" ToolTip="控制面板" IsChecked="True"
                                 Checked="NavButton_Checked" Tag="Dashboard"/>
                    <RadioButton x:Name="NavCurrentAlerts" Style="{StaticResource NavButtonStyle}"
                                 Content="&#xE7BA;" ToolTip="当前预警"
                                 Checked="NavButton_Checked" Tag="CurrentAlerts"/>
                    <RadioButton x:Name="NavIgnoredAlerts" Style="{StaticResource NavButtonStyle}"
                                 Content="&#xE74D;" ToolTip="已忽略预警"
                                 Checked="NavButton_Checked" Tag="IgnoredAlerts"/>
                    <RadioButton x:Name="NavAlertRules" Style="{StaticResource NavButtonStyle}"
                                 Content="&#xE713;" ToolTip="预警规则"
                                 Checked="NavButton_Checked" Tag="AlertRules"/>
                    <RadioButton x:Name="NavDbConnections" Style="{StaticResource NavButtonStyle}"
                                 Content="&#xE968;" ToolTip="数据库连接"
                                 Checked="NavButton_Checked" Tag="DbConnections"/>
                    <RadioButton x:Name="NavStatistics" Style="{StaticResource NavButtonStyle}"
                                 Content="&#xE9D9;" ToolTip="统计图表"
                                 Checked="NavButton_Checked" Tag="Statistics"/>
                    <RadioButton x:Name="NavSettings" Style="{StaticResource NavButtonStyle}"
                                 Content="&#xE115;" ToolTip="设置"
                                 Checked="NavButton_Checked" Tag="Settings"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 右侧内容区 -->
        <Border Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
            <ContentControl Content="{Binding Navigation.CurrentPage}"/>
        </Border>
    </Grid>
</hc:Window>
