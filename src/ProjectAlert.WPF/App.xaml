<Application x:Class="ProjectAlert.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:converters="clr-namespace:ProjectAlert.WPF.Converters"
             xmlns:vm="clr-namespace:ProjectAlert.WPF.ViewModels"
             xmlns:controls="clr-namespace:ProjectAlert.WPF.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 布尔值转可见性转换器 -->
            <BooleanToVisibilityConverter x:Key="Boolean2VisibilityConverter"/>

            <!-- 布尔值转颜色转换器 -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>

            <!-- 布尔值转锁定图标转换器 -->
            <converters:BoolToLockIconConverter x:Key="BoolToLockIconConverter"/>

            <!-- 反向布尔值转可见性转换器 -->
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

            <!-- 字符串转反向可见性转换器 -->
            <converters:String2InverseVisibilityConverter x:Key="String2InverseVisibilityConverter"/>

            <!-- 可空枚举显示转换器 -->
            <converters:NullableEnumDisplayConverter x:Key="NullableEnumDisplayConverter"/>

            <!-- 浮窗内容 DataTemplate -->
            <DataTemplate DataType="{x:Type vm:FloatingViewModel}">
                <controls:AlertWidgetContent/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:StatFloatingViewModel}">
                <controls:StatWidgetContent/>
            </DataTemplate>

            <!-- 全局颜色定义 -->
            <Color x:Key="PrimaryColor">#2196F3</Color>
            <Color x:Key="PrimaryDarkColor">#1976D2</Color>
            <Color x:Key="AccentColor">#FF5722</Color>
            <Color x:Key="NavBackgroundColor">#37474F</Color>
            <Color x:Key="NavHoverColor">#455A64</Color>
            <Color x:Key="ContentBackgroundColor">#F5F5F5</Color>
            <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
            <Color x:Key="TextPrimaryColor">#212121</Color>
            <Color x:Key="TextSecondaryColor">#757575</Color>
            <Color x:Key="BorderColor">#E0E0E0</Color>

            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="NavBackgroundBrush" Color="{StaticResource NavBackgroundColor}"/>
            <SolidColorBrush x:Key="NavHoverBrush" Color="{StaticResource NavHoverColor}"/>
            <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource ContentBackgroundColor}"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

            <!-- 按钮样式 -->
            <Style x:Key="ButtonPrimary" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="MinHeight" Value="32"/>
            </Style>
            <Style x:Key="ButtonDefault" TargetType="Button" BasedOn="{StaticResource ButtonDefault}">
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="MinHeight" Value="32"/>
            </Style>
            <Style x:Key="ButtonDanger" TargetType="Button" BasedOn="{StaticResource ButtonDanger}">
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="MinHeight" Value="32"/>
            </Style>
            <Style x:Key="ButtonWarning" TargetType="Button" BasedOn="{StaticResource ButtonWarning}">
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="MinHeight" Value="32"/>
            </Style>
            <Style x:Key="ButtonInfo" TargetType="Button" BasedOn="{StaticResource ButtonInfo}">
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="MinHeight" Value="32"/>
            </Style>

            <!-- 卡片样式 -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 页面标题样式 -->
            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>

            <!-- 卡片标题样式 -->
            <Style x:Key="CardTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
            </Style>

            <!-- 次要文本样式 -->
            <Style x:Key="SecondaryTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
