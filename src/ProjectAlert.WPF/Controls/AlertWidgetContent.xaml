<UserControl x:Class="ProjectAlert.WPF.Controls.AlertWidgetContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:ProjectAlert.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:FloatingViewModel}"
             d:DesignHeight="400" d:DesignWidth="380">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- 分类Tab样式 -->
        <Style x:Key="CategoryTabStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A3A5A"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#00D9FF"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 预警项右键菜单 -->
        <ContextMenu x:Key="AlertItemContextMenu">
            <MenuItem Header="标记为处理中"
                      Command="{Binding PlacementTarget.Tag.MarkAsProcessingCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            <MenuItem Header="忽略此预警"
                      Command="{Binding PlacementTarget.Tag.IgnoreAlertCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            <MenuItem Header="标记为已恢复"
                      Command="{Binding PlacementTarget.Tag.MarkAsRecoveredCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            <Separator/>
            <MenuItem Header="复制消息"
                      Command="{Binding PlacementTarget.Tag.CopyMessageCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
        </ContextMenu>

        <!-- 预警项模板 -->
        <DataTemplate x:Key="AlertItemTemplate">
            <Border Background="#1A2744" CornerRadius="6" Padding="10,8" Margin="16,4,0,0"
                    ContextMenu="{StaticResource AlertItemContextMenu}"
                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#243352"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel Background="Transparent">
                    <!-- 消息行 -->
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#3A4A6A" CornerRadius="8" Padding="6,1" Margin="0,0,6,0">
                            <TextBlock Text="{Binding SourceName}" Foreground="#888" FontSize="10"/>
                        </Border>
                        <TextBlock Grid.Column="1" Text="{Binding MessageSingleLine}" Foreground="#EEE" FontSize="12"
                                   TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center"
                                   ToolTip="点击查看全部" Cursor="Hand">
                            <TextBlock.InputBindings>
                                <MouseBinding MouseAction="LeftClick"
                                              Command="{Binding DataContext.ShowMessageDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"/>
                            </TextBlock.InputBindings>
                        </TextBlock>
                        <Border Grid.Column="2" Background="#1A3A5A" CornerRadius="10" Padding="8,2" Margin="6,0,0,0"
                                Visibility="{Binding ShowStatus, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="{Binding StatusText}" Foreground="#00D9FF" FontSize="10"/>
                        </Border>
                    </Grid>
                    <!-- 元信息行 -->
                    <TextBlock Text="{Binding MetaText}" Foreground="#666" FontSize="10" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- 分组模板 -->
        <DataTemplate x:Key="AlertGroupTemplate">
            <StackPanel Margin="0,8,0,0">
                <!-- 分组标题 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Level}" Value="严重">
                                        <Setter Property="Fill" Value="#E53935"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Level}" Value="警告">
                                        <Setter Property="Fill" Value="#FB8C00"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Level}" Value="信息">
                                        <Setter Property="Fill" Value="#1E88E5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Foreground="#AAA" FontSize="12">
                        <Run Text="{Binding LevelName, Mode=OneWay}"/>
                        <Run Text=" ("/>
                        <Run Text="{Binding Count, Mode=OneWay}"/>
                        <Run Text=")"/>
                    </TextBlock>
                </StackPanel>
                <!-- 预警项列表 -->
                <ItemsControl ItemsSource="{Binding Items}" ItemTemplate="{StaticResource AlertItemTemplate}"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 统计卡片 -->
        <UniformGrid Grid.Row="0" Columns="3" Margin="8,8,8,4">
            <Border Background="#E53935" CornerRadius="6" Padding="8,6" Margin="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CriticalCount}" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text=" 严重" Foreground="#FFCDD2" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="#FB8C00" CornerRadius="6" Padding="8,6" Margin="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding WarningCount}" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text=" 警告" Foreground="#FFE0B2" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="#1E88E5" CornerRadius="6" Padding="8,6" Margin="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding InfoCount}" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text=" 信息" Foreground="#BBDEFB" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- 分类Tab -->
        <Border Grid.Row="1" Background="#0F3460" BorderBrush="#1A4A7A" BorderThickness="0,1" Padding="8,6" Margin="0,4,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="CategoriesItemsControl" ItemsSource="{Binding Categories}"
                              Tag="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CategoryTabStyle}">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding Tag.SelectCategoryCommand, ElementName=CategoriesItemsControl}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <TextBlock FontSize="11">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#888"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Foreground" Value="#1E1E2E"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <Run Text="{Binding Name, Mode=OneWay}"/>
                                    <Run Text="("/>
                                    <Run Text="{Binding Count, Mode=OneWay}"/>
                                    <Run Text=")"/>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- 预警列表 -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="12,0">
            <StackPanel>
                <!-- 一切正常 -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0"
                            Visibility="{Binding IsAllClear, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="&#x2714;" Foreground="#4ADE80" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="一切正常" Foreground="#4ADE80" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- 严重分组 -->
                <ContentControl Content="{Binding CriticalGroup}" ContentTemplate="{StaticResource AlertGroupTemplate}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CriticalGroup}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- 警告分组 -->
                <ContentControl Content="{Binding WarningGroup}" ContentTemplate="{StaticResource AlertGroupTemplate}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding WarningGroup}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- 信息分组 -->
                <ContentControl Content="{Binding InfoGroup}" ContentTemplate="{StaticResource AlertGroupTemplate}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding InfoGroup}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </StackPanel>
        </ScrollViewer>

        <!-- 刷新时间 -->
        <TextBlock Grid.Row="3" Text="{Binding LastUpdateTime, StringFormat='更新于: {0:HH:mm:ss}'}"
                   Foreground="#78909C" FontSize="10" HorizontalAlignment="Center"
                   Margin="0,6,0,8"/>
    </Grid>
</UserControl>
