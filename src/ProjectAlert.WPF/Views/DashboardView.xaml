<UserControl x:Class="ProjectAlert.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Loaded="UserControl_Loaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <TextBlock Grid.Row="0" Text="控制面板" Style="{StaticResource PageTitleStyle}"/>

            <!-- 浮窗控制 -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="浮窗控制" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="管理所有浮窗的显示状态，点击按钮切换开关" Style="{StaticResource SecondaryTextStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="全部显示" Margin="0,0,8,0" Click="BtnShowAllFloating_Click"
                                    Style="{StaticResource ButtonPrimary}"/>
                            <Button Content="全部隐藏" Click="BtnHideAllFloating_Click"
                                    Style="{StaticResource ButtonDefault}"/>
                        </StackPanel>
                    </Grid>

                    <!-- 浮窗按钮列表 -->
                    <WrapPanel x:Name="FloatingButtonPanel" Margin="0,16,0,0"/>

                    <!-- 无数据提示 -->
                    <TextBlock x:Name="TxtNoFloatingWindows" Text="暂无可用浮窗"
                               Foreground="#888" FontSize="12" Margin="0,8,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- 占位符，保持Grid行号一致 -->
            <Border Grid.Row="2" Visibility="Collapsed"/>

            <!-- 应用资源统计 -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="应用资源" Style="{StaticResource CardTitleStyle}"/>

                    <UniformGrid Columns="3" Rows="2" Margin="0,8,0,0">
                        <!-- 内存占用 -->
                        <Border Background="#E8F5E9" CornerRadius="8" Padding="16,20" Margin="0,0,8,8">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TxtMemoryUsage" Text="--" Foreground="#43A047"
                                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="内存占用" Foreground="#43A047" FontSize="12"
                                           HorizontalAlignment="Center" Margin="0,4,0,0" Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                        <!-- GC内存 -->
                        <Border Background="#E3F2FD" CornerRadius="8" Padding="16,20" Margin="4,0,4,8">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TxtGcMemory" Text="--" Foreground="#1E88E5"
                                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="GC内存" Foreground="#1E88E5" FontSize="12"
                                           HorizontalAlignment="Center" Margin="0,4,0,0" Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                        <!-- CPU使用率 -->
                        <Border Background="#FFF3E0" CornerRadius="8" Padding="16,20" Margin="8,0,0,8">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TxtCpuUsage" Text="--" Foreground="#FB8C00"
                                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="CPU使用率" Foreground="#FB8C00" FontSize="12"
                                           HorizontalAlignment="Center" Margin="0,4,0,0" Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                        <!-- 线程数 -->
                        <Border x:Name="BorderThreadCount" Background="#F3E5F5" CornerRadius="8" Padding="16,20" Margin="0,0,8,0" Cursor="Hand">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TxtThreadCount" Text="--" Foreground="#8E24AA"
                                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="线程数" Foreground="#8E24AA" FontSize="12"
                                           HorizontalAlignment="Center" Margin="0,4,0,0" Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                        <!-- 句柄数 -->
                        <Border x:Name="BorderHandleCount" Background="#FFEBEE" CornerRadius="8" Padding="16,20" Margin="4,0,4,0" Cursor="Hand">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TxtHandleCount" Text="--" Foreground="#E53935"
                                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="句柄数" Foreground="#E53935" FontSize="12"
                                           HorizontalAlignment="Center" Margin="0,4,0,0" Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                        <!-- 运行时间 -->
                        <Border Background="#E0F7FA" CornerRadius="8" Padding="16,20" Margin="8,0,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TxtUptime" Text="--" Foreground="#00ACC1"
                                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="运行时间" Foreground="#00ACC1" FontSize="12"
                                           HorizontalAlignment="Center" Margin="0,4,0,0" Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <TextBlock x:Name="TxtResourceUpdate" Text="每5秒自动刷新"
                               Style="{StaticResource SecondaryTextStyle}"
                               HorizontalAlignment="Center" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>

            <!-- 快捷操作 -->
            <Border Grid.Row="4" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="快捷操作" Style="{StaticResource CardTitleStyle}"/>

                    <WrapPanel>
                        <Button Content="查看当前预警" Margin="0,0,12,12" Click="BtnCurrentAlerts_Click"
                                Style="{StaticResource ButtonPrimary}"/>
                        <Button Content="管理预警规则" Margin="0,0,12,12" Click="BtnAlertRules_Click"
                                Style="{StaticResource ButtonDefault}"/>
                        <Button Content="数据库连接" Margin="0,0,12,12" Click="BtnDbConnections_Click"
                                Style="{StaticResource ButtonDefault}"/>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
