<UserControl x:Class="ProjectAlert.WPF.Views.AlertRulesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Loaded="UserControl_Loaded">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="预警规则" Style="{StaticResource PageTitleStyle}" Margin="0"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="新增" Margin="0,0,10,0" Command="{Binding AddCommand}"
                        Style="{StaticResource ButtonPrimary}"/>
                <Button Content="刷新" Command="{Binding LoadCommand}"
                        Style="{StaticResource ButtonDefault}"/>
            </StackPanel>
        </Grid>

        <!-- 搜索栏 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBox Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                     hc:InfoElement.Placeholder="搜索规则名称..."
                     Style="{StaticResource TextBoxExtend}"
                     VerticalContentAlignment="Center"
                     Width="200" Height="32">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <ComboBox ItemsSource="{Binding CategoryOptions}"
                      SelectedItem="{Binding SelectedCategory}"
                      Width="100" Height="32" Margin="10,0,0,0"
                      hc:InfoElement.Placeholder="分类">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource NullableEnumDisplayConverter}, ConverterParameter=全部分类}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox ItemsSource="{Binding SourceTypeOptions}"
                      SelectedItem="{Binding SelectedSourceType}"
                      Width="100" Height="32" Margin="10,0,0,0"
                      hc:InfoElement.Placeholder="数据源">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource NullableEnumDisplayConverter}, ConverterParameter=全部数据源}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox ItemsSource="{Binding AlertLevelOptions}"
                      SelectedItem="{Binding SelectedAlertLevel}"
                      Width="100" Height="32" Margin="10,0,0,0"
                      hc:InfoElement.Placeholder="级别">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource NullableEnumDisplayConverter}, ConverterParameter=全部级别}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Content="搜索" Margin="10,0,0,0"
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource ButtonPrimary}"
                    Height="32"/>
            <Button Content="重置" Margin="10,0,0,0"
                    Command="{Binding ResetFilterCommand}"
                    Style="{StaticResource ButtonDefault}"
                    Height="32"/>
        </StackPanel>

        <!-- 规则列表卡片 -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0" Padding="0">
            <Grid>
                <DataGrid ItemsSource="{Binding Rules}"
                          SelectedItem="{Binding SelectedRule}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Background="White"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E0E0E0"
                          RowHeight="48"
                          HeadersVisibility="Column">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridColumnHeaderStyle}">
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell" BasedOn="{StaticResource DataGridCellStyle}">
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="分类" Binding="{Binding Category}" Width="100"/>
                        <DataGridTextColumn Header="数据源" Binding="{Binding SourceType}" Width="80"/>
                        <DataGridTextColumn Header="级别" Binding="{Binding AlertLevel}" Width="80"/>
                        <DataGridTextColumn Header="Cron表达式" Binding="{Binding CronExpression}" Width="120"/>
                        <DataGridCheckBoxColumn Header="启用" Binding="{Binding Enabled}" Width="60"/>
                        <DataGridTextColumn Header="最后执行" Binding="{Binding LastRunTime, StringFormat='{}{0:MM-dd HH:mm}'}" Width="100"/>
                        <DataGridTemplateColumn Header="操作" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="编辑" Margin="0,0,6,0"
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ButtonPrimary}"/>
                                        <Button Content="切换" Margin="0,0,6,0"
                                                Command="{Binding DataContext.ToggleEnabledCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ButtonWarning}"/>
                                        <Button Content="删除"
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ButtonDanger}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 空状态提示 -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding HasNoData, Converter={StaticResource Boolean2VisibilityConverter}, FallbackValue=Collapsed}">
                    <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                               Foreground="#BDBDBD" HorizontalAlignment="Center"/>
                    <TextBlock Text="暂无规则，点击新增按钮创建" FontSize="16" Foreground="#9E9E9E"
                               HorizontalAlignment="Center" Margin="0,12,0,0"/>
                </StackPanel>

                <!-- 加载中 -->
                <hc:LoadingCircle Visibility="{Binding IsLoading, Converter={StaticResource Boolean2VisibilityConverter}}"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 分页栏 -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}">
                <Run Text="共"/>
                <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                <Run Text="条记录，第"/>
                <Run Text="{Binding CurrentPage, Mode=OneWay}"/>
                <Run Text="/"/>
                <Run Text="{Binding TotalPages, Mode=OneWay}"/>
                <Run Text="页"/>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="上一页"
                        Command="{Binding PreviousPageCommand}"
                        IsEnabled="{Binding HasPreviousPage}"
                        Style="{StaticResource ButtonDefault}"
                        Margin="0,0,10,0"/>
                <Button Content="下一页"
                        Command="{Binding NextPageCommand}"
                        IsEnabled="{Binding HasNextPage}"
                        Style="{StaticResource ButtonDefault}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
