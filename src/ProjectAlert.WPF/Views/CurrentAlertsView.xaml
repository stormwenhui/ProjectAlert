<UserControl x:Class="ProjectAlert.WPF.Views.CurrentAlertsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Loaded="UserControl_Loaded">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="当前预警" Style="{StaticResource PageTitleStyle}" Margin="0"/>
            <Button Grid.Column="1" Content="刷新" Command="{Binding LoadCommand}"
                    Style="{StaticResource ButtonPrimary}" VerticalAlignment="Center"/>
        </Grid>

        <!-- 预警列表卡片 -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0" Padding="0">
            <Grid>
                <DataGrid ItemsSource="{Binding Alerts}"
                          SelectedItem="{Binding SelectedAlert}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Background="White"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E0E0E0"
                          RowHeight="48"
                          HeadersVisibility="Column">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridColumnHeaderStyle}">
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell" BasedOn="{StaticResource DataGridCellStyle}">
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="级别" Binding="{Binding AlertLevel}" Width="80"/>
                        <DataGridTextColumn Header="规则ID" Binding="{Binding RuleId}" Width="80"/>
                        <DataGridTextColumn Header="预警消息" Binding="{Binding Message}" Width="*"/>
                        <DataGridTextColumn Header="首次触发" Binding="{Binding FirstTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="160"/>
                        <DataGridTextColumn Header="次数" Binding="{Binding OccurCount}" Width="60"/>
                        <DataGridTemplateColumn Header="操作" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="忽略"
                                            Command="{Binding DataContext.IgnoreCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ButtonWarning}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 空状态提示 -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding HasNoData, Converter={StaticResource Boolean2VisibilityConverter}, FallbackValue=Collapsed}">
                    <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                               Foreground="#BDBDBD" HorizontalAlignment="Center"/>
                    <TextBlock Text="暂无预警数据" FontSize="16" Foreground="#9E9E9E"
                               HorizontalAlignment="Center" Margin="0,12,0,0"/>
                </StackPanel>

                <!-- 加载中 -->
                <hc:LoadingCircle Visibility="{Binding IsLoading, Converter={StaticResource Boolean2VisibilityConverter}}"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
